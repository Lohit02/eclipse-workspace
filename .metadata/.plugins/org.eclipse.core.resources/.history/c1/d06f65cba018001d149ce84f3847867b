package datastructures;

import java.util.Scanner;

public class bekar {

	public static void main(String[] args) {
		Scanner sc= new Scanner(System.in);
		int p= sc.nextInt();
		for(int i=0;i<p;i++){
		    int a=sc.nextInt();
		    int b=sc.nextInt();
		    int c=sc.nextInt();
		    int d=sc.nextInt();
		     if((a+b)>(c+d))
		      System.out.print(a+c);
		      else
		      System.out.print(b+d);
		    
		}

	}

}
